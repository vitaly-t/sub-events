{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "name": "SUB-EVENTS",
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeNotExported": true,
    "disableOutputCheck": true,
    "mode": "file",
    "out": "docs",
    "theme": "minimal"
  }
}
